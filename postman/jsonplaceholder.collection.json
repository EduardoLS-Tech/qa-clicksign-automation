      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/posts", "host": ["{{baseUrl}}"], "path": ["posts"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
